<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/desScoll">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:context=".DetailFragment">

            <ImageView
                    android:layout_width="370dp"
                    android:layout_height="260dp"
                    android:src="@drawable/apples"
                    android:id="@+id/fruitImage"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="18dp"/>
            <TextView
                    android:text="@string/namefruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nameFruit"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/fruitImage" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="100dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/desFruit" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/nameFruit" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:lineSpacingMultiplier="1.2" android:text="@string/descriptionfruit"
                    android:textSize="18sp" android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

